<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.insectiousapp.machineallocator">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/machine_icon4"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/machine_icon4"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:windowSoftInputMode="stateVisible|adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".AssetActivity.AssetListActivity" />
        <activity
            android:name=".AssetActivity.AddAssetActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".EmployeeActivity.AddEmployeeActivity"></activity>
    </application>

</manifest>